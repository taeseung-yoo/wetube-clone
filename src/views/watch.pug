extends base
include mixins/video
include mixins/comment

block content 
    div#videoContainer(data-videoid=video._id)
        video(src=video.fileUrl)
        div#videoControls.videoControls
            div.videoControls__play
                span#play.videoControls__playBtn
                    i.fas.fa-play
                div.videoControls__time
                    span#currentTime 00:00
                    span  / 
                    span#totalTime 00:00
            input(type="range",step="1", value="0", min="0")#timeline.videoControls__timeline
            div.videoControls__volume
                input(type="range",step="0.1", value=0.5, min="0", max="1")#volume
                span#mute
                    i.fas.fa-volume-up
            div
                span#fullScreen
                    i.fas.fa-expand
    div.video__data
        p.video__title=video.title
        div 
            span.video__views #{video.meta.views} Ìöå / 
            span.video__createdAt=new Date(video.createdAt).toLocaleDateString("ko-kr", {weekday: 'long', year: 'numeric', month: 'long', day: 'numeric'})
        div.video__owner
            span Uploaded By
            div.video__owner-profile
                a(href=`/users/${video.owner._id}`)
                    img(src=video.owner.avatarUrl,crossorigin) 
                a(href=`/users/${video.owner._id}`)=video.owner.name
        if String(video.owner._id) === String(loggedInUser._id)
            div.video__manage
                a(href=`${video.id}/edit`)
                    div Edit Video ‚û°Ô∏è
                a(href=`${video.id}/delete`)
                    div Delete Video ‚û°Ô∏è
    div.video__comments
        span ÎåìÍ∏Ä #{video.comments.length}Í∞ú
        if loggedIn
            div.video__add-comments
                if !loggedInUser.avatarUrl
                    span.comments__fake-avatar üòÄ
                else
                    img(src=loggedInUser.avatarUrl,crossorigin).header__avatar
                form.video__comment-form#commentForm
                    input(type="text", cols="30", rows="10", placeholder="Write a nice commment...")
                    button Add Comment
        ul 
            each comment in video.comments.reverse()
                +comment(comment)

block scripts 
    script(src="/static/js/videoPlayer.js") 
    if loggedIn
        script(src="/static/js/commentSection.js") 
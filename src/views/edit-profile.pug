extends base
block content 
    if errorMessage 
        span=errorMessage
    form(method="POST", enctype="multipart/form-data").edit-profile__form
        label(for="avatar") Avatar
        input(type="file", id="avatar", name="avatar", accept="image/*")
        input(name="name", type="text",required, placeholder="Name", value=loggedInUser.name)
        input(name="email", type="email",required, placeholder="E-mail", value=loggedInUser.email)
        input(name="username", type="text",required, placeholder="Username", value=loggedInUser.username)
        input(name="location", type="text", placeholder="Location", value=loggedInUser.location)
        input(type="submit", value="Update Profile") 
    if !loggedInUser.socialLoginOnly
        div.edit-profile__password
            a(href="change-password") Change Password &rarr;
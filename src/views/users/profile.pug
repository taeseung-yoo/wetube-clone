extends ../base
include ../mixins/video

block content 
    div.profile__data
        if loggedInUser.socialLoginOnly
            img(src=user.avatarUrl,crossorigin).avatar
        else
            img(src="/" + user.avatarUrl,crossorigin).avatar
        h3=user.name
    div.video-grid
        each video in user.videos
            +video(video)
        else
            span.empty__message No videos found 
    div.my-comments
        ul 
            each comment in user.comments.reverse() 
                li
                    div.my-comments__title
                        a(href=`/videos/${comment.video._id}`)
                            span=comment.video.title
                        span=new Date(comment.createdAt).toLocaleDateString("ko-kr", {weekday: 'long', year: 'numeric', month: 'long', day: 'numeric'})
                    div.my-comments__comment
                        span=comment.text
